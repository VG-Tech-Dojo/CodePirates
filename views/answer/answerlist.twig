{% extends "base.twig" %}
{% block title %}answer.twig{% endblock %}
{% block js %}
<script type="text/javascript">
    function gotoAnswerSingle(answer_id) {
        mixpanel.track('gotoAnswer',{
            'user_id':{{user.id}},
            'answer_id': answer_id
        }); 
    };
</script>
{% endblock %}
{% block content %}
<div class="row">
    <div class="page-header">
        <h1>問題{{question.id}}のみんなの解答一覧</h1>
    </div>
    <h2>問題</h2>
    <div class="box">
        {% autoescape false %}
        {{question.content}}
        {% endautoescape %}
    </div>
    <br>
    <h2>みんなの回答一覧</h2>
    <ul>
    <table>
        {% for answerer_item in answerer %}
            <tr>
                <th align="left" ><a href="/answerlist/user/{{answerer_item.id}}/question/{{question.id}}" onClick="gotoAnswerSingle({{answer}})">{{answerer_item.name}}さんの回答一覧</a></th>
            </tr>
        {% endfor %}
    </table>
    </ul>
    <a href="/question"><button class="btn" type="button">問題リストに戻る</button></a>
</div>
{% endblock %}
