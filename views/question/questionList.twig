{% extends "base.twig" %}
{% block title %}問題一覧{% endblock %}

{% block content %}
    <div class="row">
        <div class="page-header">
            <h1>問題リスト</h1>
        </div>
        {% if errors %}
            {{ errors }}
        {% else %}
            {% for question in questionList %}
                <div class="question_box">
                    <h2>Q.{{question.id}}:{{question.title}}</h2>
                    <p>作成日:{{question.created_at}}</p>
                    <a href="/question/{{question.id}}">
                        <button class="btn btn-large" type="button">問題に答える</button>
                    </a>
                    {% if question.answered %}
                        <a href="/answerlist/{{question.id}}">
                            <button class="btn btn-large btn-primary" type="button">回答を見る</button>
                        </a>
                    {% endif %}
                </div>
            {% endfor %}
        {% endif %}
{% endblock %}
