{% extends "base.twig" %}
{% block title %}問題一覧{% endblock %}
{% block content %}
    <div class="row">
        <div class="page-header">
            <h1>問題リスト</h1>
        </div>
        {% if errors %}
            {{ errors }}
        {% else %}
            {% for question in questionList %}
                <div class="question_box">
                    <h2>Q.{{question.id}}:{{question.title}}</h2>
                    <p>作成日:{{question.created_at}}</p>
                    <a href="/admin/modifyQuestion/{{question.id}}">
                        <button class="btn btn-large" type="button" >問題を修正する</button>
                    </a>
                </div>
            {% endfor %}
        {% endif %}
{% endblock %}
